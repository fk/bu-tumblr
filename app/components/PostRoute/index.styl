@import "../../stylus/variables"
@import "jeet"
@import "rupture"

.post-route
  position relative
  padding-bottom 5.125rem

  .post-column
    padding 5.125rem 4.5rem
    max-width 51.5rem
    margin 3.25rem auto 0
    position relative

    .post-photo,
    .post-video
      position relative
      top 0
      left 50%
      transform translate3d(-50%, 0, 0)
      padding 0 1rem
      width 100vw
      max-width 95rem

  .note-band
    width 100%
    margin 0 auto
    max-width 51.5rem
    padding 1rem
    z-index 1000
    transform translateZ(0)
    cf()

    .tag-list
      opacity 0.5
      col(9/12)
      float left

      a
        text-decoration none

        & + a::before
          content ', '

    .note-count
      position relative
      col(3/12)
      float right
      opacity 0.5
      text-align right
