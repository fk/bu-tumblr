@import "nib"
@import "jeet"

.note-box
  margin 0 auto
  width 100%
  max-width 51.5rem
  padding 2.875rem 1rem
  background-color #fff
  color #999
  transform translateZ(0)

  .note
    padding 1rem 0
    border-bottom 1px solid #F1F1F1
    cf()

    &:last-child
      border-bottom none

    .avatar, .blog-name, .action, .from-statement
      display block
      float left

    .avatar
      width 1rem
      height 1rem
      margin-right 0.25rem

    .blog-name
      margin-right 0.25rem

    .from-statement
      margin-left 0.25rem
