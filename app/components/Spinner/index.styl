@import "nib"

@keyframes spin
  from
    transform rotateZ(0deg)
  to
    transform rotateZ(360deg)

.spinner-container
  position fixed
  display flex
  align-items center
  justify-content center
  width 100%
  height 100%
  top 0
  left 0
  background-color rgba(#fff, 0.25)

.spinner
  position absolute
  display block
  width 5rem
  height 5rem
  top 50%
  left 50%
  border-radius @width
  border-width 1rem
  border-style solid
  border-color rgba(#58aedf, 0.25)
  border-right 1rem solid #58aedf
  animation spin 1s linear infinite
