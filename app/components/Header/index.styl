@import "../../stylus/variables"
@import "jeet"

.header
  position relative
  width 100%
  transition background-color 175ms ease-in-out
  transform translateZ(0)
  pointer-events none
  cf()

  a
    text-decoration none
    color #000

  &.fixed
    position fixed
    top 0
    left 0
    right 0
    z-index 10000

.logo,
.menu-btn,
.back-btn
  pointer-events all

.logo
  padding 1rem 2rem 0
  vertical-align middle
  opacity 1
  transition opacity 400ms ease
  position relative

  .navigation-open .header &
    opacity 0

.logo
  float left

  h1
    transition opacity 200ms ease-in-out
    margin-top 0

    +below(769px)
      font-size 1.8rem

    +below(500)
      font-size 1.4rem

  &:hover h1
    opacity 0.7

.menu-btn
  float right
  button()

  .line
    fill @color

  .fixed &
    color #999

    .line
      fill @color
