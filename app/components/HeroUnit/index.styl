@import "nib"
@import "jeet"
@import "rupture"

.hero-unit
  display block
  position relative
  padding 0 0.625rem
  width 100%

  .hero-wrapper
    display table
    width: 100%

  .title-box
    background-color #333
    color #fff
    font-family proxima-nova, Helvetica, Arial, sans-serif
    font-size 2rem
    padding 2.25rem 5.125rem 3.125rem 1.625rem
    margin 0
    position absolute
    bottom 0
    left 1.625rem

    h3
      font-weight 400
      margin 0
      padding 0

  .backer
    position absolute
    top 0
    left 0
    right 0
    width 100%
    height 110%
    z-index -1
    g
      fill #E5E5E5

  .intro
    display table-cell
    width 25rem
    text-align right
    cf()

    .we-are, .hashtags
      display inline-block
      text-align left
      padding 2.5rem 2.25rem

      h3, h4
        margin-top 0

    .we-are
      background-color #333
      color #fff

      h3
        color #69C29F
        font-size 2rem
        font-family proxima-nova, Helvetica, Arial, sans-serif

      p
        font-size 0.875rem
        line-height 1.5625rem

    .hashtags
      margin-top 0.625rem
      width 13.625rem
      background-color #4FA4DA
      color #fff

      h4, a
        font-family proxima-nova, Helvetica, Arial, sans-serif
        text-transform uppercase

      a
        color @color
        text-decoration none

  .hero-unit-post
    display table-cell
    position relative
    height 75vh
    padding-left 0.625rem
