@import "nib"
@import "jeet"
@import "rupture"
@import "../../stylus/variables"

.hero-unit
  display block
  position relative
  padding 0 0.625rem
  width 100%

  .hero-wrapper
    display flex
    align-items center
    align-content stretch
    width: 100%

    +below(DISPLAY_MEDIUM)
      display block

  .backer
    position absolute
    top 0
    left 0
    right 0
    width 100%
    height 110%
    z-index -1
    g
      fill #E5E5E5

  .intro
    align-self flex-start
    flex-stretch 1
    width 25rem
    text-align right
    padding-top 1rem


    +below(DISPLAY_LARGE)
      width 20rem

    +below(DISPLAY_MEDIUM)
      display block
      width 100%
      cf()

    .we-are, .hashtags
      display inline-block
      text-align left
      padding 2.5rem 2.25rem

      +below(DISPLAY_MEDIUM)
        height 16rem
        padding 1.5rem

      h3, h4
        margin-top 0

    .we-are
      background-color #333
      color #fff

      +below(DISPLAY_MEDIUM)
        col(2/3)
        text-align left

      +below(DISPLAY_SMALL)
        col(1/1)
        text-align left
        height auto

      h3
        color #69C29F
        font-size 2rem
        font-family proxima-nova, Helvetica, Arial, sans-serif

      p
        font-size 0.875rem
        line-height 1.5625rem

    .hashtags
      margin-top 0.625rem
      width 13.625rem
      background-color #4FA4DA
      color #fff

      a
        position relative
        display inline-block
        float none
        clear both

        &::after
          content ' '
          display block
          bottom 0
          left 0
          width 0
          height 2px
          background-color #fff
          transition width 400ms ease
        &:hover::after
          width 100%

      li + li
        margin-top 0.5rem

      +below(DISPLAY_MEDIUM)
        col(1/3)
        margin-top 0

        li + li
          margin-top 0.25rem

      +below(DISPLAY_SMALL)
        stack()
        col(1/1)
        height auto
        text-align left
        ul
          cf()
          li
            float left
            margin-right 0.625rem
            & + li
              margin-top 0

      h4, a
        font-family proxima-nova, Helvetica, Arial, sans-serif
        text-transform uppercase

      a
        color @color
        text-decoration none
        font-weight bold

  .hero-unit-post
    flex-grow 4
    position relative
    padding-left 0.625rem

    +below(DISPLAY_MEDIUM)
      display block
      padding-left 0
      margin-top 0.625rem
