@import "jeet"
@import "rupture"

.author-route
  position relative
  padding-bottom 5.125rem
  color $white

  .author-column
    background-color #333
    padding 5.125rem 4.5rem
    max-width 51.5rem
    margin 3.25rem auto 0
    position relative

    .author-titles
      text-align center

    .author-photo
      position relative
      display block
      width 8.75rem
      height 8.75rem
      border-radius 50%
      margin 0 auto

  .posts-by-author
    margin-top 4rem
    padding 0 1rem
    cf()

    h4
      transform translateZ(0)
      color #333
      text-align center
      text-transform uppercase


    .post-wrapper
      col(1/3)
      margin-top 4rem
      position relative

      &::before
        margin-top 50%

      .post
        position absolute
        top 0
        left 0
        right 0
        bottom 0
        overflow hidden

