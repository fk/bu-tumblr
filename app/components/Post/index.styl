@import "nib"
@import "jeet"

.post-photo, .photos
  width 100%
  height 100%
  display block
  position relative
  cf()

  .photoset-row
    &:last-child .photo-layout .photo-figure
      bottom 0

    for n in 1..9
      &.row-{n}
        height 100% * (1 / n)

    &.row-3:last-child
      +below(650px)
        col(1)

    .photo-layout
      display block
      position relative
      height 100%

      for n in 1..3
        &.photo-layout-{n}
          span(1/n)

      &:last-child .photo-figure
        right 0

      .photo-figure
        margin 0
        position absolute
        top 0
        right 0
        bottom 0
        left 0
        background-position center center
        background-size cover

