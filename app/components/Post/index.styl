@import "nib"
@import "jeet"

.post-wrapper
  position relative

.post
  width 100%
  height 100%
  max-width 95rem
  margin 0 auto
  display block
  position relative
  font-family proxima-nova, Helvetica, Arial, sans-serif

.post-quote
  background-color #333
  color #fff
  padding 4.5rem 3.25rem

  +below(750px)
    padding 2.25rem 1.675rem

  quote
    font-size 2.25rem
    display block

    +below(750px)
      font-size 1.625rem


  .source
    margin-top 2.25rem
    font-size 0.875rem
    text-transform uppercase
    font-weight bold
    display block
    text-align center
    color #58AEDF

.post-text
  padding 4.75rem 3.25rem
  background-color #333
  color #fff
  font-family "proxima-nova", helvetica, arial, sans-serif

  +below(900px)
    padding 2.375rem 1.6125rem

  &.single
    padding 0

  h3
    font-size 2rem

  p
    margin 0
    padding 0 0 0.875rem

  .text-body
    column-count 3
    font-size 0.875rem
    line-height 1.5rem

    +below(700px)
      column-count 2

    +below(570px)
      column-count 1

  &.single .text-body
    column-count 1

.post-photo
  .photos
    cf()

    .photo
      height 30rem
      width 30rem
      background-repeat no-repeat
      background-size cover
      background-position center center

      for n in 1..4
        &.flex-{n}
          span(1/n)

      for n in 1..7
        &.height-{n}
          height 38.75rem - (6.25rem * n)

          +below(600px)
            height @height * (1/2)

.post-video
  .player
    width 100%
    padding-bottom 100% * (9/16)
    iframe
      position absolute
      top 0
      left 0
      width 100%
      height 100%
