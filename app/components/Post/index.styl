@import "nib"
@import "jeet"

.post-wrapper
  display block
  position relative
  max-width 85rem
  margin 0 auto

  .post-header
    position relative
    display block

  &.post-text
    max-width 51.5rem

    +below(990px)
      max-width 100%

  &.post-quote
    max-width 51.5rem

    +below(990px)
      max-width 100%

.post
  width 100%
  height 100%
  max-width 95rem
  margin 0 auto
  display block
  position relative
  clear both
  font-family proxima-nova, Helvetica, Arial, sans-serif

.post.post-quote
  background-color #333
  color #fff
  padding 4.5rem 3.25rem
  text-align center

  +below(750px)
    padding 2.25rem 1.675rem

  quote
    font-size 2.25rem
    display block

    +below(750px)
      font-size 1.625rem


  .source
    margin-top 2.25rem
    font-size 0.875rem
    text-transform uppercase
    font-weight bold
    display block
    text-align center
    color #58AEDF

.post.post-text
  padding 5.125rem 4.5rem
  background-color #333
  color #fff
  font-family "proxima-nova", helvetica, arial, sans-serif

  iframe
    margin 0 auto !important
    display block !important

  .read-more-wrapper
    position relative
    width 100%
    display block
    cf()

    .read-more-button
      float right

  +below(900px)
    padding 2.375rem 1.6125rem

  &.single
    padding 0

  h3
    font-size 2rem

  p
    margin 0
    padding 0 0 0.875rem

  figure
    padding 0
    margin 1rem 0

    img
      width 100%
      height auto

  .text-body
    font-size 0.875rem
    line-height 1.5rem

  &.single .text-body
    column-count 1

  .thumbnail &
    padding 1.5rem 3rem

    h3
      font-size 1.414em
      padding 0

    .read-more-button
      padding 0.5rem
      margin 0.25rem 0

.post-photo
  .photos
    cf()

    .photo
      position relative
      height 30rem
      width 30rem
      background-repeat no-repeat
      background-size cover
      background-position center center
      cursor pointer
      transition all 175ms ease-in-out
      box-shadow 2px 2px 2px rgba(black, 0)

      .shade
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        background-color rgba(#4fa4da, 0.5)
        opacity 0
        transition opacity 300ms ease

      &.dimmed .shade
        opacity 1

      &.scaled
        transform scale(1.05)
        z-index 150
        box-shadow 4px 4px 10px rgba(black, 0.15)

      for n in 1..4
        &.flex-{n}
          span(1/n)

      for n in 2..7
        &.height-{n}
          // height 38.75rem - (6.25rem * n)
          height 38.75rem

          +below(600px)
            height @height * (1/2)

  .post-header
    display block
    max-width 51.5rem
    margin 0 auto

    +below(990px)
      max-width 100%

  .photo-body
    line-height 1.5rem
    margin 0 auto
    padding 5.125rem 4.5rem
    max-width 51.5rem
    background-color #333
    color #fff

    +below(990px)
      max-width 100%

.post-video
  &.instagram
    position relative
    display block
    height auto
    margin 0 auto
    width 484px

    .player
      height auto
      padding-bottom 0
      iframe
        position relative

  &.vimeo, &.youtube
    .player
      width 100%
      padding-bottom 100% * (9/16)
      iframe
        position absolute
        top 0
        left 0
        width 100%
        height 100%
