@import "nib"
@import "jeet"

.post
  width 100%
  height 100%
  display block
  position relative
  font-family proxima-nova, Helvetica, Arial, sans-serif

  .title-box
    background-color #333
    color #fff
    font-size 2rem
    padding 2.25rem 5.125rem 3.125rem 1.625rem
    margin 0
    position absolute
    bottom 0
    left 1.625rem
    min-width 5rem * 4
    &.no-title
      background-color transparent
    h3
      font-weight 400
      margin 0
      padding 0

.post-quote
  background-color #333
  color #fff
  padding 4.5rem 3.25rem

  quote
    font-size 2.25rem
    display block

  .source
    margin-top 2.25rem
    font-size 0.875rem
    text-transform uppercase
    font-weight bold
    display block
    text-align center
    color #58AEDF

.post-text
  padding 4.75rem 3.25rem
  background-color #333
  color #fff
  font-family "proxima-nova", helvetica, arial, sans-serif

  h3
    font-size 2rem

  p
    margin 0
    padding 0 0 0.875rem

  .text-body
    column-count 3
    font-size 0.875rem
    line-height 1.5rem

.post-photo
  .photos
    cf()

    .photo
      height 30rem
      width 30rem
      background-repeat no-repeat
      background-size cover
      background-position center center

      for n in 1..4
        &.flex-{n}
          span(1/n)

      for n in 1..7
        &.height-{n}
          height 38.75rem - (6.25rem * n)

.post-video
  .player
    width 100%
    padding-bottom 100% * (9/16)
    iframe
      position absolute
      top 0
      left 0
      width 100%
      height 100%
