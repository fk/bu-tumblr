.post-video
  &.instagram
    position relative
    display block
    height auto
    margin 0 auto
    width 484px

    .player
      height auto
      padding-bottom 0
      iframe
        position relative

  &.vimeo, &.youtube, &.tumblr
    // @see http://www.cssmojo.com/creating-intrinsic-ratios-for-video/
    .video-container
      position relative
      padding-bottom 56.25%
      padding-top 30px
      height 0
      overflow hidden

      iframe,
      object,
      embed
        position absolute
        top 0
        left 0
        width 100%
        height 100%