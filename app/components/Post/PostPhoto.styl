@import "../../stylus/variables"
@import "jeet"

.lazyload-placeholder
  background $gray-lighter
  height 0

.fade-appear
  opacity 0.01

.fade-appear.fade-appear-active
  opacity 1
  transition opacity $animation-speed-fast $animation-curve-default

.post-photo
  .post-body
    padding 0 4.5rem 5.125rem
    max-width 51.5rem
    margin 0 auto 0
    position relative

    +above(3)
      padding-left 0
      padding-right 0

    .post-caption
      display block
      margin-top 5.25rem

  .photos
    cf()
    list-style none
    padding 0

    .photo
      position relative
      background-repeat no-repeat
      background-size cover
      background-position center center
      cursor pointer
      transition all $animation-speed-fast $animation-curve-default
      z-index 1

      img
        width 100%
        height auto
        display block

      .shade
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        background-color rgba(0, 0, 0, 0.2)
        opacity 0
        transition opacity $animation-speed-slow $animation-curve-default

      &.dimmed .shade
        opacity 1

      &.scaled
        transform scale(1.05)
        z-index 150
        box-shadow $shadow-24dp

      for n in 1..4
        &.flex-{n}
          span(1/n)

  .post-header
    display block
    max-width 51.5rem
    margin 0 auto

    +below(m)
      max-width 100%

  .photo-body
    line-height 1.5rem
    margin 0 auto
    padding 5.125rem 4.5rem
    max-width 51.5rem
    background-color #333
    color #fff

    +below(m)
      max-width 100%
