DISPLAY_LARGE = 1080px
DISPLAY_MEDIUM = 990px
DISPLAY_SMALL = 780px

$gray = #E6DCC3
$gray = rgba(0, 0, 0, 0.439216)
$blue = #0275d8
$modal-bg = rgba(white, .85)

$shadow-color = #000
$shadow-key-umbra-opacity = 0.1
$shadow-key-penumbra-opacity = 0.07
$shadow-ambient-shadow-opacity = 0.06
$shadow-focus-opacity = 0.24

$shadow-focus = 0 0 8px rgba($shadow-color, .18), 0 8px 16px rgba($shadow-color, .36)

$shadow-2dp = 0 2px 2px 0 rgba($shadow-color, $shadow-key-penumbra-opacity), 0 3px 1px -2px rgba($shadow-color, $shadow-key-umbra-opacity), 0 1px 5px 0 rgba($shadow-color, $shadow-ambient-shadow-opacity)
$shadow-3dp = 0 3px 4px 0 rgba($shadow-color, $shadow-key-penumbra-opacity), 0 3px 3px -2px rgba($shadow-color, $shadow-key-umbra-opacity), 0 1px 8px 0 rgba($shadow-color, $shadow-ambient-shadow-opacity)
$shadow-4dp = 0 4px 5px 0 rgba($shadow-color, $shadow-key-penumbra-opacity), 0 1px 10px 0 rgba($shadow-color, $shadow-ambient-shadow-opacity), 0 2px 4px -1px rgba($shadow-color, $shadow-key-umbra-opacity)
$shadow-6dp = 0 6px 10px 0 rgba($shadow-color, $shadow-key-penumbra-opacity), 0 1px 18px 0 rgba($shadow-color, $shadow-ambient-shadow-opacity), 0 3px 5px -1px rgba($shadow-color, $shadow-key-umbra-opacity)
$shadow-8dp = 0 8px 10px 1px rgba($shadow-color, $shadow-key-penumbra-opacity), 0 3px 14px 2px rgba($shadow-color, $shadow-ambient-shadow-opacity), 0 5px 5px -3px rgba($shadow-color, $shadow-key-umbra-opacity)
$shadow-16dp = 0 16px 24px 2px rgba($shadow-color, $shadow-key-penumbra-opacity), 0 6px 30px 5px rgba($shadow-color, $shadow-ambient-shadow-opacity), 0 8px 10px -5px rgba($shadow-color, $shadow-key-umbra-opacity)
$shadow-24dp = 0 9px 46px  8px rgba($shadow-color, $shadow-key-penumbra-opacity), 0 11px 15px -7px rgba($shadow-color, $shadow-ambient-shadow-opacity), 0 24px 38px  3px rgba($shadow-color, $shadow-key-umbra-opacity)

$animation-curve-fast-out-slow-in = cubic-bezier(0.4, 0, 0.2, 1)
$animation-curve-linear-out-slow-in = cubic-bezier(0, 0, 0.2, 1)
$animation-curve-fast-out-linear-in = cubic-bezier(0.4, 0, 1, 1)

$animation-curve-default = $animation-curve-fast-out-slow-in

$animation-speed-default = 250ms
$animation-speed-fast = 200ms
$animation-speed-slow = 300ms

$z-index-header = 1000
$z-index-lightbox = 2000

button()
  border none
  color $gray
  font-weight bold
  background-color transparent
  padding 1rem
  outline none
  position relative
  cursor pointer
