.masthead
  position absolute
  z-index -1
  width 100%
  height 385px
  transition background-color 175ms ease-in-out
  .angle
    position absolute
    top 100%
    width 100%
    height 80px
    g
      transition fill 175ms ease-in-out
  .fixed &
    display none

.logo, .gear, .menu-btn
  col(1/3)
  padding 0 1.25em
  margin-top 20px
  vertical-align middle

  .navigation-open &
    display none

.logo
  h1
    transition opacity 200ms ease-in-out
  .fixed &
    visibility hidden
  &:hover h1
    opacity 0.7

.gear
  text-align center
  visibility hidden
  .fixed &
    visibility visible
    margin-top 10px

.menu-btn
  background none
  border none
  text-align right
  color #fff
  text-transform uppercase
  font-family Montserrat, Helvetica, Arial, sans-serif
  img
    max-width 16px
    margin-left 10px
    margin-bottom 2px
    width 6.5em
  .fixed &
    color #333

.navigation
  font-family Montserrat, Helvetica, Arial, sans-serif
  position fixed
  top 0
  left 0
  bottom 0
  right 0
  background-color rgba(79,164,218,.85)
  .close-btn
    position absolute
    top 30px
    right 30px
    text-transform uppercase
    padding-right 26px
    border none
    color #fff
    background-color transparent
    background-image url('../img/close-icon.png')
    background-size 16px 12px
    background-repeat no-repeat
    background-position center right
