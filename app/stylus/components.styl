.container
  display block
  position relative
  opacity 1
  filter none
  transition all 350ms ease
  min-height 100%

  .navigation-open &
    transform scale(0.925)
    opacity 0.75

.masthead
  position absolute
  z-index -1
  width 100%
  height 385px
  transition background-color 175ms ease-in-out

  .angle
    position absolute
    top 100%
    width 100%
    height 80px
    z-index 100

    g
      transition fill 175ms ease-in-out

  .fixed &
    display none

.logo, .gear, .menu-btn
  col(1/3)
  padding 0 1.25em
  margin-top 20px
  vertical-align middle
  opacity 1
  transition opacity 400ms ease

  .navigation-open .header &
    opacity 0

.logo
  h1
    transition opacity 200ms ease-in-out
  .fixed &
    visibility hidden
  &:hover h1
    opacity 0.7

.gear
  text-align center
  visibility hidden
  .fixed &
    visibility visible
    margin-top 10px

.menu-btn
  display inline-block
  .line
    fill #fff

.menu-btn
  background none
  border none
  text-align right
  color #fff
  text-transform uppercase
  font-family Montserrat, Helvetica, Arial, sans-serif
  .menu-icon
    width 16px
    height 12px
    max-width 16px
    margin-left 10px
    margin-bottom 2px
    width 6.5em
  .fixed &
    color #333

.navigation
  font-family Montserrat, Helvetica, Arial, sans-serif
  position fixed
  top 0
  left 0
  bottom 0
  right 0
  background-color rgba(79,164,218,.85)
  overflow scroll

  &.navigation-enter, &.navigation-leave
    transition transform 400ms ease, opacity 400ms ease

  &.navigation-enter
    transform scale(1.1)
    opacity 0

    &.navigation-enter-active
      transform scale(1)
      opacity 1

  &.navigation-leave
    transform scale(1)
    opacity 1

    &.navigation-leave-active
      transform scale(1.1)
      opacity 0

  nav
    position absolute
    width 99.9%
    padding 0 65px
    top 50%
    text-align right
    transform translateY(-50%) translateZ(0)
    font-size 19px

    @keyframes fadeInUp
      from
        transform translateY(-30%) translateZ(0)
      to
        transform translateY(-50%) translateZ(0)

    animation fadeInUp 600ms ease
    animation-fill-mode both
    cf()

    a
      display inline-block
      position relative
      margin 1.25em 2em
      color #fff
      font-family Montserrat, Helvetica, Arial, sans-serif
      text-decoration none
      text-transform uppercase
      display block

      h2
        font-size 3.75em
        position relative
        display inline-block
        margin 0

        .highlight
          position absolute
          top 0
          left 0
          margin 0
          padding 0
          color #333
          overflow hidden
          width 0
          transition width 400ms ease

        &:hover .highlight
          width 100%

  .logo
    position absolute
    top 30px
    left 30px
    text-decoration none
    color #fff

  .close-btn
    position absolute
    top 30px
    right 30px
    text-transform uppercase
    padding-right 26px
    border none
    color #fff
    background-color transparent
    background-image url('../img/close-icon.png')
    background-size 16px 12px
    background-repeat no-repeat
    background-position center right

.post
  col(1)
  height 0
  margin-top 8em
  padding-bottom 48%
  display block
  position relative

  .tag-list
    position absolute
    top 0
    left 0
    z-index 10
    background-color rgba(255, 255, 255, 0.5)
    padding 1em

    .tag
      float left

      & + .tag
        margin-left 1em

  .photos
    display block
    position absolute
    top 0
    left 0
    right 0
    bottom 0

    .photo
      width 100%
      height 100%
      float left
      background-repeat no-repeat
      background-size cover
      background-position center center
