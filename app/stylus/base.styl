@import "variables"

*
*::before
*::after
  box-sizing border-box

html
  min-height 100%

body
  min-height 100%
  height 100%
  text-rendering optimizeLegibility
  font-smoothing antialiased
  font-size 16px
  font-family apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Open Sans", "Helvetica Neue", sans-serif;

  &.navigation-open
    overflow hidden
    position relative
