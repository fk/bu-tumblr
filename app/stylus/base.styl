@import "variables"

*
*::before
*::after
  box-sizing border-box

::selection
  background lighten(#ed6550, 15%)
  color #fff

::-moz-selection
  background lighten(#ed6550, 15%)
  color #fff

html
  min-height 100%
  border 10px solid #fff

  +below(DISPLAY_LARGE)
    font-size 14px


body
  min-height 100%
  height 100%
  text-rendering optimizeLegibility
  font-smoothing antialiased
  font-size 16px

  &.navigation-open
    background-color #ddd
    overflow hidden
    position relative

h1
  font-size 2em
  margin 0
  font-weight 700
  text-transform uppercase
  font-family Montserrat
  font-weight 700
  font-size 1.9em
  line-height 0.8em
  letter-spacing -0.08em
  text-transform uppercase

button
  &:focus
    outline none

ul
  list-style none
  margin 0
  padding 0
