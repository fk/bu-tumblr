@import "variables"

*
*::before
*::after
  box-sizing border-box

::selection
  background lighten(#ed6550, 15%)
  color #fff

::-moz-selection
  background lighten(#ed6550, 15%)
  color #fff

html
  min-height 100%
  border 10px solid #fff



body
  min-height 100%
  height 100%
  text-rendering optimizeLegibility
  font-smoothing antialiased
  font-size 16px
  padding-bottom 4rem
  font-family "proxima-nova", Helvetica, Arial, sans-serif

  &.navigation-open
    background-color #ddd
    overflow hidden
    position relative

h1
  font-size 2em
  margin 0
  font-weight 700
  text-transform uppercase
  font-family Montserrat
  font-weight 700
  font-size 1.9em
  line-height 0.8em
  letter-spacing -0.08em
  text-transform uppercase

button
  &:focus
    outline none

h2
  font-size 1rem * (36 / 16)

ul
  list-style none
  margin 0
  padding 0

.go-back
  position relative
  display block
  color #58AEDF
  z-index 1000
  text-decoration none
  text-transform uppercase
  font-size 1rem
  margin 4rem 2rem
